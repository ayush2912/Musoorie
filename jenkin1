pipeline{
agent any
tools {
  dockerTool 'puneet'
  maven 'test'
}

parameters{
		 string(name:'port', defaultValue:'8181', description:'Tomcat WebApp Port')
	}
 
stages{
 stage(terraform){
    steps{
sh'terraform plan'
}
}
 stage(compile){
    steps{
         sh 'mvn compile'
         }
}
 stage(test){
     steps{
        sh 'mvn test'
      }
}
 stage(pacakge){
steps{
        sh 'mvn package'
      }
}
 stage(deploy){
 
     
steps{
echo 'Deleting Old Docker container...'
					//sh "docker rm \$(docker ps -aq -f name=webserver$BUILD_NUMBER)"
					//echo 'Old Docker container Deleted successfully'

 sh 'sudo docker build -t image:$BUILD_NUMBER  . '

echo 'Starting Docker Container'
					sh "docker run --name webserver -d -p ${params.port}:8080 image:$BUILD_NUMBER "
					echo "Docker Container started successfully at port : ${params.port}"



}
}

}
}
